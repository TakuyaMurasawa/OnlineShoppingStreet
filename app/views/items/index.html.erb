<div class="container-fluid">
  <div class="row my-3">
    <div class="col-lg-2">
      <table class="table table-borderd">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, search_path('search[value]': genre.id,
              'search[how]': "match", 'search[name]': genre.name ) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
